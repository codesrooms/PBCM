/* client/pages/pay/pay.wxss */
.money{
  margin: 0 auto;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  background: #fff;
}
.money>text{
  display: block;
  line-height: 200rpx;
  text-align: center;
}
.nav{
  padding: 0rpx 24rpx;
  background: #fff;
  height: 80rpx;
}.nav>text{
  padding-left: 24rpx;
  display: block;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 34rpx;
  text-align: center;
  float: right;
  border-left: 1rpx solid #c7c7c7
}
.nav>view{
  float: left;
  height: 80rpx;
}
.nav>view>text{
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
  display: block;
  text-align: center;
}
.person{
  margin: 0rpx 24rpx;
  background: #fff;
  height: 80rpx;
}.person>text{
  display: block;
  width: 90rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 34rpx;
  text-align: center;
  float: right;
  border-left: 1rpx solid #c7c7c7
}
.pay{
  position: fixed;
  bottom: 60rpx;
  left: 24rpx;
  right:24rpx;
}
.record{
  padding: 0rpx 24rpx;
}
